FROM node:20-bullseye

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    make \
    git \
    sqlite3 \
    vim \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Install global npm packages
RUN npm install -g \
    typescript \
    ts-node \
    fastify-cli

# Create a non-root user with sudo privileges
ARG USERNAME=dev42
ARG USER_UID=1001
ARG USER_GID=$USER_UID

# Create the user with sudo privileges
RUN groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -m $USERNAME \
    && mkdir -p /home/$USERNAME/app \
    && chown -R $USERNAME:$USERNAME /home/$USERNAME \
    && echo "$USERNAME ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/$USERNAME

# Set working directory
WORKDIR /app
VOLUME ["/app"]

# Create an entrypoint script
RUN echo '#!/bin/bash' > /entrypoint.sh && \
    echo 'if [ "$1" = "bash" ] || [ -z "$1" ]; then' >> /entrypoint.sh && \
    echo '  echo "Welcome to ft_transcendence development environment!"' >> /entrypoint.sh && \
    echo '  echo "Your project is mounted at /app"' >> /entrypoint.sh && \
    echo '  echo "Node.js $(node -v) and npm $(npm -v) are ready to use"' >> /entrypoint.sh && \
    echo '  echo "TypeScript $(tsc -v) is installed globally"' >> /entrypoint.sh && \
    echo '  echo "You have sudo privileges (no password required)"' >> /entrypoint.sh && \
    echo '  exec bash' >> /entrypoint.sh && \
    echo 'else' >> /entrypoint.sh && \
    echo '  exec "$@"' >> /entrypoint.sh && \
    echo 'fi' >> /entrypoint.sh && \
    chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
CMD ["bash"]
